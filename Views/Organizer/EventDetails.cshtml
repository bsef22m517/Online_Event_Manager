@model Event
@* Hidden Fields & Model View can be changed later. Not a part of UI*@

@{
    Layout = "_Layout";
    var ev = Model;
    ViewData["Title"] = Model.Title + " - Manage Event";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="container mt-4" style="padding-top: 50px; padding-bottom: 80px;">
    <div class="card p-4  rounded shadow" style="background-color: rgba(10, 10, 25, 0.95); color: white; border: 1px solid #4da6ff;">
        @if (!string.IsNullOrEmpty(ev.ImageUrl))
        {
            <div class="text-center mb-4">
                <img src="@ev.ImageUrl" alt="Event Image" class="img-fluid rounded shadow"
                     style="max-height: 300px; object-fit: cover; border: 2px solid #4da6ff;" />
            </div>
        }

        <h2>@ev.Title</h2>
            <p><strong>Date:</strong> @ev.Date.ToString("MMMM dd, yyyy")</p>
            <p><strong>Location:</strong> @ev.Location</p>
            <p><strong>Type:</strong> @ev.Type</p>
            <p><strong>Description:</strong> @ev.Description</p>
            <div class="d-flex mt-3 gap-2">
                <a href="@Url.Action("EditEvent", "Organizer", new { id = ev.Id })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("DeleteEvent", "Organizer", new { id = ev.Id })" class="btn btn-danger">Delete</a>
                <a href="@Url.Action("AllRSVPs", "Organizer", new { id = ev.Id })" class="btn btn-primary">Show RSVPs</a>

            </div>
        </div>
    </div>

</html>
