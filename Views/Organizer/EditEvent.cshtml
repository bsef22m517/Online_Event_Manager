@{
    Layout = "_Layout";
}
@model Event
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event - EventHub</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

    <div class="container" style="padding-top:40px">
        <div class="row justify-content-center">
        <div class="col-md-4 col-lg-6">
            <div class="card" style="background-color: rgba(10, 10, 25, 0.95); border-radius: 10px; padding: 40px; box-shadow: 0px 0px 100px rgba(0, 0, 0, 10); color: white;">
                    <div class="card-body">
                        <h3 class="text-center" style="color: rgba(104, 181, 253, 0.753);">Edit Event</h3>
                        <p class="text-center text-light">Update the event details below</p>

                        <form action="/Organizer/EditEvent" method="post">
                            <input type="hidden" name="Id" value="@Model.Id" />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="text-center mb-4">
                                <img src="@Model.ImageUrl" alt="Event Image" class="img-fluid rounded shadow"
                                     style="max-height: 300px; object-fit: cover; border: 2px solid #4da6ff;" />
                                     </div>
                               
                        }
                       
                        <div class="mb-3">
                            <label for="imageUrl" class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="imageUrl"  value="@Model.ImageUrl" placeholder="Enter image URL"
                                   style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                        </div>
                            <div class="mb-3">
                                <label for="title" class="form-label">Event Title</label>
                                <input type="text" class="form-control" name="Title" value="@Model.Title" required
                                       style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Event Description</label>
                                <textarea class="form-control" name="Description" required
                                          style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">@Model.Description</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="speaker" class="form-label">Speaker</label>
                                <input type="text" class="form-control" name="Speaker" value="@Model.Speaker" required
                                       style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">Select Type</label>
                                <select class="form-control" name="type" value =" @Model.Type" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                    <option value="online">Online</option>
                                    <option value="onsite">Onsite</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="date" class="form-label">Event Date</label>
                                <input type="datetime-local" class="form-control" name="Date"
                                       value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required
                                       style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="location" class="form-label">Event Location</label>
                                <input type="text" class="form-control" name="Location" value="@Model.Location" required
                                       style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>
                        

                            <div class="d-grid">
                                <button type="submit" class="btn" style="background-color: #004080; border: none; color: white;">Save Changes</button>
                            </div>
                        </form>


                        <div class="text-center mt-2">
                            <p class="mb-0">Back to <a href="@Url.Action("Dashboard", "Organizer")" style="color: #427fbd;">Dashboard</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
