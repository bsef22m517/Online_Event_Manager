@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Event - EventHub</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

    <div class="container" style="padding-top:70px">
        <div class="row justify-content-center">
            <div class="col-md-4 col-lg-6">
                <div class="card" style="background-color: rgba(10, 10, 25, 0.95); border-radius: 10px; padding: 30px; box-shadow: 0px 0px 100px rgba(0, 0, 0, 10); color: white;">
                    <div class="card-body">
                        <h3 class="text-center" style="color: rgba(104, 181, 253, 0.753);">Add New Event</h3>
                        <p class="text-center text-light">Fill in the details to create a new event</p>

                        <form method="post" action="@Url.Action("AddEvent", "Organizer")">
                            <div class="mb-3">
                                <label for="title" class="form-label">Event Title</label>
                                <input type="text" class="form-control" name="title" placeholder="Enter event title" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Event Description</label>
                                <textarea class="form-control" name="description" placeholder="Enter event description" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="speaker" class="form-label">Speaker</label>
                                <input class="form-control" name="speaker" placeholder="Enter speaker name" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="role" class="form-label">Select Type</label>
                                <select class="form-control" name="type" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                    <option value="online">Online</option>
                                    <option value="onsite">Onsite</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="date" class="form-label">Event Date</label>
                                <input type="datetime-local" class="form-control" name="date" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                            <div class="mb-3">
                                <label for="location" class="form-label">Event Location</label>
                                <input type="text" class="form-control" name="location" placeholder="Enter event location" required style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                            </div>

                        <div class="mb-3">
                            <label for="imageUrl" class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="imageUrl" placeholder="Enter image URL"
                                   style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                        </div>

                            <div class="d-grid">
                                <button type="submit" class="btn" style="background-color: #004080; border: none; color: white;">Add Event</button>
                            </div>
                        </form>

                        <div class="text-center mt-2">
                            <p class="mb-0">Back to <a href="@Url.Action("Dashboard", "Organizer")" style="color: #427fbd;">Dashboard</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</html>
