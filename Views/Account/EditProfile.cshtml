@model EventHubApplication.Models.AppUser
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 70px;">
    <div class="card text-center" style="background-color: rgba(10, 10, 25, 0.95); color: white; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); width: 100%; max-width: 400px;">
        <div class="card-body">
            <h3>Edit Profile</h3>
            <form method="post" action="@Url.Action("UpdateProfile", "Account")">
                <div class="form-group text-start">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                </div>

                <div class="form-group text-start mt-2">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                </div>

                <div class="form-group text-start mt-2">
                    <label for="Bio">Bio</label>
                    <textarea class="form-control" id="Bio" name="Bio" rows="3" required>@Model.Bio</textarea>
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn" style="background-color: #004080; border: none; color: white;">
                        Save Changes
                    </button>
                </div>

                <div class="text-center mt-3">
                    <a href="@Url.Action("Profile", "Account")" style="color: #427fbd; text-decoration: none;">Back to Profile</a>
                </div>
            </form>
        </div>
    </div>
</div>
