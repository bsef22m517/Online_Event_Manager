@model EventHubApplication.Models.AppUser
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; padding: 40px 0;">
    <div class="card text-center" style="background-color: rgba(10, 10, 25, 0.95); color: white; padding: 30px; border-radius: 10px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5); width: 100%; max-width: 400px;">
        <div class="card-body">

            <h3>@Model.Name</h3>
            <p class="text-light" style="margin-bottom: 15px;">Role: @Model.UserRole</p>

            <p class="text-start"><strong>Email:</strong> @Model.Email</p>
            <p class="text-start"><strong>Bio:</strong> @Model.Bio</p>

            <div class="d-grid mt-3">
                <a href="@Url.Action("EditProfile", "Account")" class="btn" style="background-color: #004080; border: none; color: white; transition: 0.3s;">
                    Edit Profile
                </a>
            </div>

            <div class="text-center mt-3">
                <a href="/Identity/Account/Logout" style="color: #427fbd; text-decoration: none;">Login Again</a>
            </div>
        </div>
    </div>
</div>
